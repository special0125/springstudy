<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

<mapper namespace="com.koreait.integration1.repository.board">

	<select id="selectAll" resultType="com.koreait.integration1.domain.Board">
		SELECT TITLE, CONTENT, REGDATE
		  FROM SEARCHBOARD
	</select>
	
	
	<select id="selectQuery" resultType="com.koreait.integration1.domain.Board">
		SELECT NO, TITLE, CONTENT, REGDATE
		  FROM SEARCHBOARD
		 WHERE ${column} LIKE '%' || #{query} || '%'
	</select>
	
	

</mapper>